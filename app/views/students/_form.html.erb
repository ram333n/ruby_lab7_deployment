<%= form_for @student, :html => { :class => "form-horizontal student" } do |f| %>

  <% if @student.errors.any? %>
    <div id="error_expl" class="panel panel-danger">
      <div class="panel-heading">
        <h3 class="panel-title"><%= pluralize(@student.errors.count, "error") %> prohibited this student from being saved:</h3>
      </div>
      <div class="panel-body">
        <ul>
        <% @student.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
        </ul>
      </div>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label t("model.surname"), :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :surname, :class => 'form-control' %>
    </div>
    <%=f.error_span(:surname) %>
  </div>
  <div class="form-group">
    <%= f.label t("model.group"), :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :group, :class => 'form-control' %>
    </div>
    <%=f.error_span(:group) %>
  </div>
  <div class="form-group">
    <%= f.label t("model.geometry_score"), :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :geometry_score, :class => 'form-control' %>
    </div>
    <%=f.error_span(:geometry_score) %>
  </div>
  <div class="form-group">
    <%= f.label t("model.algebra_score"), :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :algebra_score, :class => 'form-control' %>
    </div>
    <%=f.error_span(:algebra_score) %>
  </div>
  <div class="form-group">
    <%= f.label t("model.informatics_score"), :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :informatics_score, :class => 'form-control' %>
    </div>
    <%=f.error_span(:informatics_score) %>
  </div>

  <div class="form-group">
    <div class="col-lg-offset-2 col-lg-10">
      <%= f.submit nil, :class => 'btn btn-primary' %>
      <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                students_path, :class => 'btn btn-default' %>
    </div>
  </div>

<% end %>
